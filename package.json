{
  "scripts": {
    "clean": "rimraf dist",
    "copy-static": "cpx \"{manifest.json,sidepanel.html,icons/**/*,_locales/**/*}\" dist",
    "build:css": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/style.css",
    "build:ts": "tsc",
    "build": "npm run clean && npm run copy-static && npm run build:css && npm run build:ts",
    "watch:css": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/style.css --watch",
    "watch:ts": "tsc --watch",
    "watch:static": "cpx \"{manifest.json,sidepanel.html,icons/**/*,_locales/**/*}\" dist --watch",
    "watch": "npm run clean && npm-run-all --parallel watch:*"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.1",
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7",
    "typescript": "^5.9.2"
  }
}
